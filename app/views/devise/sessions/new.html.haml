.row
	.col-lg-5
		%h2 Sign in
		= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f|
			= f.input :login, label: 'Username or Email', :autofocus => true
			= f.input :password
			= f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
			= f.button :submit, "Sign in", :class => 'btn btn-lg btn-primary btn-block'
= render "devise/shared/links"
